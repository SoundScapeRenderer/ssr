# https://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 80
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile{,.in,.am}]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false

[*.pd]
max_line_length = off
